1-->the sum of odd numbers between 1 and 50
public class oddsum {
    public static void main(String[] args) {
        int sum=0;
        for(int i=1;i<=50;i++){
            if(i%2!=0){
                sum=sum+i;
                
            }
            
        }
        System.out.println("The sum of odd numbers between 1 nd 100 is " + sum);
        

    }
    
}


2-->develop a jav app toassign a category to a given temperature
import java.util.*;
public class temp {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter temperature");
        double temp=sc.nextDouble();

        if(temp<0){
            System.out.println("The temperature " + temp + " is categorized as Freezing");
        }
        else if(temp>=0 && temp<=15){
            System.out.println("The temperature " + temp + " is categorized as Cold");

        }
        else if(temp>=16 && temp<=25 ){
            System.out.println("The temperature " + temp + " is categorized as Moderate");
        }
        else if(temp<=26 && temp>=35){
            System.out.println("The temperature " + temp + " is categorized as Warm");
        }
        else{
            System.out.println("The temperature " + temp + " is categorized as Hot");
        }
        
    }
    
}

3-->sum of  sqaures of the first 20 natural numbers
public class sumofsquares {
    public static void main(String[] args) {
        int sqaure_sum=0;
        for(int i=1;i<=20;i++){
            sqaure_sum+=i*i;

        }
        System.out.println("the sum of  sqaures of the first 20 natural numbers is :"+sqaure_sum);
    }
    
}


4-->public class calci {
    public static void main(String[] args) {
        add();
        substract(80,40);
        int prod=multiply(20,5);
        double q=divide();
        System.out.println("product :"  +prod);
        System.out.println("quotient :" + q);
        
    }
    public static void add(){
        int num1=10;
        int num2=5;

        int sum=num1+num2;
        System.out.println("sum : " +sum);
    }
    public static void substract(int num1,int num2){
        int diff=num1-num2;
        System.out.println("difference : "+ diff);
    }
    public static int multiply(int num1,int num2){
       
        int mul=num1*num2;
        return mul;
    }
    public static double divide(){
        int num1=10;
        int num2=4;

        double q=num1/(double)num2;
        return q;
    }
    
}


5-->import java.util.*;
public class printeven {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter a number");
        int n=sc.nextInt();
        for(int i=1;i<=n;i++){
            
                System.out.println(+ i*2);
            }
        }
    }


6-->count number of digits
import java.util.*;
public class countdigits {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter a number");
        int n=sc.nextInt();
        int count=0;
        while(n>0){
       n=n/10;
        count++;
        }
        System.out.println(count);
        
    }
    
}

   


